{
  "name": "korean-learning-philippines",
  "version": "1.0.0",
  "description": "Korean Language Learning App for Philippines",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "npm run build:web && npm run build:android",
    "build:web": "echo 'Web build complete'",
    "build:android": "cordova build android",
    "build:ios": "cordova build ios",
    "dev": "cordova run android --device",
    "dev:ios": "cordova run ios --device",
    "serve": "cordova serve",
    "prepare": "cordova prepare",
    "platform:add:android": "cordova platform add android",
    "platform:add:ios": "cordova platform add ios",
    "plugin:add": "cordova plugin add",
    "plugin:remove": "cordova plugin remove",
    "plugin:list": "cordova plugin list",
    "platform:list": "cordova platform list",
    "requirements": "cordova requirements",
    "clean": "cordova clean",
    "emulate:android": "cordova emulate android",
    "emulate:ios": "cordova emulate ios",
    "run:android": "cordova run android",
    "run:ios": "cordova run ios"
  },
  "keywords": [
    "korean",
    "language",
    "learning",
    "philippines",
    "filipino",
    "education",
    "mobile",
    "app"
  ],
  "author": "Korean Learning Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "cordova": "^10.0.0",
    "cordova-android": "^9.1.0",
    "cordova-ios": "^6.2.0",
    "http-server": "^14.1.1"
  },
  "cordova": {
    "platforms": [
      "android",
      "ios"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-device": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-ionic-webview": {},
      "cordova-plugin-ionic-keyboard": {},
      "cordova-plugin-media": {},
      "cordova-plugin-file": {},
      "cordova-plugin-network-information": {},
      "cordova-plugin-inappbrowser": {}
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/koreanlearning/philippines-app.git"
  },
  "bugs": {
    "url": "https://github.com/koreanlearning/philippines-app/issues"
  },
  "homepage": "https://koreanlearning.ph"
}
